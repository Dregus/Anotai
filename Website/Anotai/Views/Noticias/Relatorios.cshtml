@model Anotai.Models.HomeViewModel

@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <title>Anotaí - Administrador</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="~/Content/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="~/Content/assets/css/animate.min.css" rel="stylesheet" />

    <!--  Light Bootstrap Table core CSS    -->
    <link href="~/Content/assets/css/light-bootstrap-dashboard.css" rel="stylesheet" />

    <link href="assets/css/demo.css" rel="stylesheet" />

    <!--     Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Roboto:400,700,300' rel='stylesheet' type='text/css'>
    <link href="~/Content/assets/css/pe-icon-7-stroke.css" rel="stylesheet" />
</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-color="orange">
            <div class="sidebar-wrapper">
                <div class="logo">
                    <a class="simple-text"><img src="~/Content/img/Logo_Escrita.fw.png"></a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="@Url.Action("Index", "Noticias")">
                            <i class="pe-7s-tools"></i>
                            <p>Gerenciar Notícias</p>
                        </a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="pe-7s-user"></i>
                            <p>Meu Perfil</p>
                        </a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Relatorios", "Noticias")">
                            <i class="pe-7s-graph"></i>
                            <p>Relatório Rendimento</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Home", "Home")">
                            <i class="pe-7s-left-arrow"></i>
                            <p>Sair</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default navbar-fixed">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navigation-example-2">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Relatórios Gerenciais</a>
                    </div>
                </div>
            </nav>

            <div class="content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Relatório de Investidores</h4>
                                    <p class="category">Com este relatório você terá uma visão rápida de quantos investidores você possui na plataforma</p>
                                </div>
                                <div class="row" style="margin:0px;margin-top:20px">
                                @using (Html.BeginForm("PesquisarUsuarios", "Noticias"))
                                {
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Usuario.Nome, new { @class = "form-control form-control-sm", placeholder = "Nome" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Usuario.Sobrenome, new { @class = "form-control form-control-sm", placeholder = "Sobrenome" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Usuario.Telefone, new { @class = "form-control form-control-sm", placeholder = "Telefone" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Usuario.Email, new { @class = "form-control form-control-sm", placeholder = "Email" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Usuario.Endereco, new { @class = "form-control form-control-sm", placeholder = "Endereco" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        <input type="submit" value="Pesquisar" class="btn btn-light" />
                                    </div>
                                }
                                </div>
                                <div class="content table-responsive table-full-width">
                                    <table class="table table-hover table-striped">
                                        <thead>
                                        <th>ID</th>
                                        <th>Nome</th>
                                        <th>Sobrenome</th>
                                        <th>Telefone</th>
                                        <th>Email</th>
                                        <th>Endereco</th>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Usuarios)
                                            {
                                                <tr>
                                                    <td>@item.UsuarioId</td>
                                                    <td>@item.Nome</td>
                                                    <td>@item.Sobrenome</td>
                                                    <td>@item.Telefone</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Endereco</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="header">
                                    <h4 class="title">Relatório de Contatos</h4>
                                    <p class="category">Aqui você visualiza as mensagens deixadas por possíveis investidores interessados no produto</p>
                                </div>
                                <div class="row" style="margin:0px;margin-top:20px">
                                @using (Html.BeginForm("PesquisarContatos", "Noticias"))
                                {
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Contato.Nome, new { @class = "form-control form-control-sm", placeholder = "Nome" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Contato.Sobrenome, new { @class = "form-control form-control-sm", placeholder = "Sobrenome" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Contato.Telefone, new { @class = "form-control form-control-sm", placeholder = "Telefone" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Contato.Email, new { @class = "form-control form-control-sm", placeholder = "Email" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        @Html.TextBoxFor(model => model.Contato.Mensagem, new { @class = "form-control form-control-sm", placeholder = "Mensagem" })
                                    </div>
                                    <div class="col-lg-2 col-md-2">
                                        <input type="submit" value="Pesquisar" class="btn btn-light" />
                                    </div>
                                }
                                </div>
                                <div class="content table-responsive table-full-width">
                                    <table class="table table-hover table-striped">
                                        <thead>
                                        <th>ID</th>
                                        <th>Nome</th>
                                        <th>Sobrenome</th>
                                        <th>Telefone</th>
                                        <th>E-mail</th>
                                        <th>Mensagem</th>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.Contatos)
                                            {
                                                <tr>
                                                    <td>@item.ContatoId</td>
                                                    <td>@item.Nome</td>
                                                    <td>@item.Sobrenome</td>
                                                    <td>@item.Telefone</td>
                                                    <td>@item.Email</td>
                                                    <td>@item.Mensagem</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <footer class="footer">
                <div class="container-fluid">
                    <nav class="pull-left">
                        <ul>
                            <li>
                                <a href="#">
                                    Home
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Como Funciona
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    Baixe o App
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <p class="copyright pull-right">
                        &copy;
                        <script>document.write(new Date().getFullYear())</script> <a href="#">Anotai</a>
                    </p>
                </div>
            </footer>


        </div>
    </div>


</body>

<!--   Core JS Files   -->
<script src="~/Content/assets/js/jquery-1.10.2.js" type="text/javascript"></script>
<script src="~/Content/assets/js/bootstrap.min.js" type="text/javascript"></script>

<!--  Checkbox, Radio & Switch Plugins -->
<script src="~/Content/assets/js/bootstrap-checkbox-radio-switch.js"></script>

<!--  Charts Plugin -->
<script src="~/Content/assets/js/chartist.min.js"></script>

<!--  Notifications Plugin    -->
<script src="~/Content/assets/js/bootstrap-notify.js"></script>

<!--  Google Maps Plugin    -->
<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>

<!-- Light Bootstrap Table Core javascript and methods for Demo purpose -->
<script src="~/Content/assets/js/light-bootstrap-dashboard.js"></script>

<!-- Light Bootstrap Table DEMO methods, don't include it in your project! -->
<script src="~/Content/assets/js/demo.js"></script>


</html>