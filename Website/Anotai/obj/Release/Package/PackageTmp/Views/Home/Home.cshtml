@model Anotai.Models.HomeViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Anotaí - Sua comanda</title>
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Merriweather:400,300,300italic,400italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <link href="~/Content/vendor/magnific-popup/magnific-popup.css" rel="stylesheet">
    <link href="~/Content/css/creative.min.css" rel="stylesheet">

    <style>
        .popup_info {
            width: 400px;
            position: absolute;
            z-index: 100;
            top: 50px;
            right: 50px;
        }
}
    </style>
</head>
<body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="js-scroll-trigger" href="#page-top"><img src="~/Content/img/Logo_Escrita.fw.png" style="width:116px" /></a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#page-top">Sobre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#funcionamento">Como Funciona?</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#baixe">Baixe o App</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#entrar">Entrar</a>
                    </li>
                    <li class="nav-item" style="margin-left:10px">
                        <a class="btn btn-primary js-scroll-trigger" href="#entrar">Registrar</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <header class="masthead">
        @if (ViewBag.ErroLogin != null)
        {
            <div class="alert alert-danger popup_info">
                <a href="#" class="close" data-dismiss="alert">×</a>
                <strong>Erro!</strong> @ViewBag.ErroLogin
            </div>
        }
        @if (ViewBag.ContatoOk != null)
        {
            <div class="alert alert-success popup_info">
                <a href="#" class="close" data-dismiss="alert">×</a>
                <strong>Obrigado!</strong> @ViewBag.ContatoOk
            </div>
        } else if (ViewBag.ContatoErro != null)
        {
            <div class="alert alert-danger popup_info">
                <a href="#" class="close" data-dismiss="alert">×</a>
                <strong>Erro!</strong> @ViewBag.ContatoErro
            </div>
        }
        @if (ViewBag.CadastrarErro != null)
        {
            <div class="alert alert-danger popup_info">
                <a href="#" class="close" data-dismiss="alert">×</a>
                <strong>Erro!</strong> @ViewBag.CadastrarErro
            </div>
        }
        <div class="header-content">
            <div class="header-content-inner">
                <h1 id="homeHeading">Fica tranquilo, sua comanda tá com a gente!</h1>
                <hr>
                <p>
                    Seus gastos estão todos na palma da sua mão, sem papel, sem caneta, sem essa de perder
                    a comanda e pagar um absurdo! Apenas seu celular, inclusive, Anotaí garçom!
                </p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#funcionamento">Descubra Mais</a>
            </div>
        </div>
    </header>
    <section class="bg-primary" id="funcionamento">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="section-heading text-white">Controle é o nome!</h2>
                    <hr class="light">
                    <p class="text-faded">
                        Você entra no estabelecimento já com sua comanda em mãos (literalmente).
                        Nada de atendentes marcando valores errados ou itens a mais na sua comanda. Tenha sempre o
                        controle de seus pedidos! Descrição e imagem, valor unitário e total em um aplicativo.
                    </p>
                    <a class="btn btn-default btn-xl js-scroll-trigger" href="#services">E o que mais?</a>
                </div>
            </div>
        </div>
    </section>
    <section id="services">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">Ao seu dispor</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-qrcode text-primary sr-icons"></i>
                        <hr class="light">
                        <h3>Comanda Virtual</h3>
                        <p class="text-muted">Sua comanda está sempre com você. Sem papel. Digital.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-paper-plane text-primary sr-icons"></i>
                        <hr class="light">
                        <h3>Pagamento Rápido</h3>
                        <p class="text-muted">Cadastre seu cartão de crédito, clique em pagar. É só isso.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-check-square-o text-primary sr-icons"></i>
                        <hr class="light">
                        <h3>Valide a comanda</h3>
                        <p class="text-muted">
                            Cada estabelecimento tem seu jeito de validar! Dê uma olhada
                            com o garçom, ele é o cara!
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 text-center">
                    <div class="service-box">
                        <i class="fa fa-4x fa-heart text-primary sr-icons"></i>
                        <hr class="light">
                        <h3>App Grátis</h3>
                        <p class="text-muted">E a melhor parte: o nosso aplicativo é de graça!</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="baixe" class="call-to-action bg-dark">
        <div class="container text-center">
            <h2>Conheça melhor vendo de dentro!</h2>
            <a class="btn btn-default btn-xl sr-button" href="http://play.google.com">Baixe o App!</a>
        </div>
    </section>
    <section id="entrar">
        <div class="container text-center">
            <div class="row">
                <div class="col-lg-2 col-md-2 text-center">
                </div>

                <div class="col-lg-4 col-md-4 text-center">
                    <div class="row text-center">
                        <div class="col">
                            <h2>Faça login</h2>
                            <hr>
                            <br />
                        </div>
                    </div>
                    @using (Html.BeginForm("Entrar", "Home"))
                    {
                        <div class="row mx-auto">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Usuario.Email, new { @class = "form-control", placeholder = "Email" })
                            </div>
                        </div>
                        <br />
                        <div class="row mx-auto">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Usuario.Senha, new { @class = "form-control", placeholder = "Senha", Type = "password" })
                            </div>
                        </div>
                        <br />
                        <div class="row mx-auto">
                            <div class="input-group">
                                <input type="submit" value="Entrar" class="btn btn-light" />
                            </div>
                        </div>
                        <br /><br /><br />
                    }
                </div>

                <div class="col-lg-4 col-md-4 text-center">
                    <div class="row text-center">
                        <div class="col">
                            <h2 class="section-heading">Seja um investidor!</h2>
                            <hr>
                            <br />
                        </div>
                    </div>
                    @using (Html.BeginForm("Cadastrar", "Home"))
                    {
                        <div class="row mx-auto">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Usuario.Nome, new { @class = "form-control", placeholder = "Nome" })
                            </div>
                        </div>
                        <br />
                        <div class="row mx-auto">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Usuario.Sobrenome, new { @class = "form-control", placeholder = "Sobrenome" })
                            </div>
                        </div>
                        <br />
                        <div class="row mx-auto">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Usuario.Telefone, new { @class = "form-control", placeholder = "Telefone" })
                            </div>
                        </div>
                        <br />
                        <div class="row mx-auto">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Usuario.Email, new { @class = "form-control", placeholder = "Email" })
                            </div>
                        </div>
                        <br />
                        <div class="row mx-auto">
                            <div class="input-group">
                                @Html.TextBoxFor(model => model.Usuario.Senha, new { @class = "form-control", placeholder = "Senha", Type = "password" })
                            </div>
                        </div>
                        <br />
                        <div class="row mx-auto">
                            <div class="input-group">
                                <input type="submit" value="Cadastrar" class="btn btn-light" />
                            </div>
                        </div>
                    }
                </div>

                <div class="col-lg-2 col-md-2 text-center">
                </div>
            </div>
        </div>
    </section>
    <section class="bg-dark text-center">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                @for (var i = 0; i < Model.Noticias.Count(); i++)
                {
                    if (i == 0)
                    {
                        <div class="carousel-item active">
                            @Model.Noticias.ElementAt(i).Titulo
                            <br /><br />
                            @Model.Noticias.ElementAt(i).Mensagem
                        </div>
                    }
                    else
                    {
                        <div align-content:center" class="carousel-item">
                            @Model.Noticias.ElementAt(i).Titulo
                            <br /><br />
                            @Model.Noticias.ElementAt(i).Mensagem
                        </div>
                    }
                }
            </div>

            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </section>
    <section class="call-to-action bg-primary">
        <div class="container text-center">
            <div class="row text-center">
                <div class="col">
                    <h2 class="section-heading text-white">Deixe seu contato</h2>
                    <hr class="light">
                    <br />
                </div>
            </div>
            @using (Html.BeginForm("CadastrarContato", "Home"))
            {
                <div class="row">
                    <div class="col-lg-3 col-md-3">
                        @Html.TextBoxFor(model => model.Contato.Nome, new { @class = "form-control", placeholder = "Nome" })
                        <br />
                    </div>
                    <div class="col-lg-3 col-md-3">
                        @Html.TextBoxFor(model => model.Contato.Sobrenome, new { @class = "form-control", placeholder = "Sobrenome" })
                        <br />
                    </div>
                    <div class="col-lg-3 col-md-3">
                        @Html.TextBoxFor(model => model.Contato.Email, new { @class = "form-control", placeholder = "Email" })
                        <br />
                    </div>
                    <div class="col-lg-3 col-md-3">
                        @Html.TextBoxFor(model => model.Contato.Telefone, new { @class = "form-control", placeholder = "Telefone" })
                        <br />
                    </div>
                    <div class="col-lg-12 col-md-12">
                        @Html.TextAreaFor(model => model.Contato.Mensagem, new { @class = "form-control", placeholder = "Mensagem" })
                    </div>
                </div>

                <div class="text-center">
                    <br />
                    <br />
                    <input type="submit" value="Enviar Mensagem" class="btn btn-light" />
                </div>
            }
        </div>
    </section>

    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/popper/popper.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!-- Plugin JavaScript -->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Content/vendor/scrollreveal/scrollreveal.min.js"></script>
    <script src="~/Content/vendor/magnific-popup/jquery.magnific-popup.min.js"></script>
    <!-- Custom scripts for this template -->
    <script src="~/Content/js/creative.min.js"></script>
</body>
</html>
